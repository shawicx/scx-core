{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue Hooks",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declarationMap": true,
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node"
  },
  "include": ["."]
}
