{
  "name": "@scxfe/vue-hooks",
  "type": "module",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/shawicx/scx-core#readme",
  "bugs": {
    "url": "https://github.com/shawicx/scx-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawicx/scx-core.git"
  },
  "funding": "https://github.com/sponsors/shawicx",
  "license": "ISC",
  "author": "dev.rehab498@passinbox.com",
  "sideEffects": false,
  "main": "./lib/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "oxlint . --config ../../oxlint.json",
    "lint:fix": "prettier --write . && oxlint --fix . --config ../../oxlint.json"
  },
  "prettier": "prettier-config-ali",
  "eslintConfig": {
    "extends": [
      "ali/typescript/vue",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": [
        "error",
        {
          "groups": [
            [
              "^@?\\w"
            ],
            [
              "^"
            ],
            [
              "^\\."
            ],
            [
              "^.+\\u0000$"
            ],
            [
              "^\\u0000"
            ]
          ]
        }
      ],
      "simple-import-sort/exports": "error"
    }
  },
  "devDependencies": {
    "@scxfe/ts-config": "workspace:^",
    "@vue/runtime-core": "^3.4.21",
    "father": "^4.4.0",
    "prettier": "^3.2.5",
    "prettier-config-ali": "^1.3.2",
    "typescript": "^5.4.4",
    "vue": "^3.4.21"
  },
  "publishConfig": {
    "access": "public"
  }
}
