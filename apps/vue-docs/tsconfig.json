{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@repo/*": ["../../packages/*/src"],
      "@scxfe/doc-schema": ["../../packages/doc-schema/src"],
      "@scxfe/docs-core": ["../../packages/docs-core/src"],
      "@scxfe/docs-ui-vue": ["../../packages/docs-ui-vue/src"],
      "@scxfe/vue-ui": ["../../packages/vue-ui/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../../packages/doc-schema/src/**/*.ts",
    "../../packages/docs-core/src/**/*.ts",
    "../../packages/docs-ui-vue/src/**/*",
    "../../packages/vue-ui/src/**/*"
  ],
  "exclude": ["node_modules", "dist", "../../packages/doc-utils"]
}
