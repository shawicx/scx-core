{
  "private": true,
  "name": "scxfe",
  "homepage": "https://github.com/shawicx/shawicx-core#readme",
  "bugs": {
    "url": "https://github.com/shawicx/shawicx-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawicx/shawicx-core.git"
  },
  "funding": "https://github.com/sponsors/shawicx",
  "author": {
    "name": "cx shaw",
    "email": "shawicx"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev && dumi dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . && stylelint \"**/*.{css,less,scss}\"",
    "lint:fix": "prettier --write . && eslint --fix . && stylelint --fix \"**/*.{css,less,scss}\"",
    "prepare": "husky install",
    "prepublish": "turbo build",
    "publish": "changeset add && changeset version && changeset publish",
    "postaction": "git push origin main --tags",
    "release": "pnpm run prepublish && pnpm run publish && pnpm run postaction"
  },
  "commitlint": {
    "extends": [
      "ali"
    ],
    "rules": {
      "type-case": [
        2,
        "always",
        [
          "lower-case",
          "upper-case"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "RELEASING",
          "feat",
          "fix",
          "docs",
          "style",
          "test",
          "refactor",
          "chore",
          "revert"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{css,less,scss}": "stylelint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "eslintConfig": {
    "extends": [
      "ali/typescript/react",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": [
        "error",
        {
          "groups": [
            [
              "^@?\\w"
            ],
            [
              "^"
            ],
            [
              "^\\."
            ],
            [
              "^.+\\u0000$"
            ],
            [
              "^\\u0000"
            ]
          ]
        }
      ],
      "simple-import-sort/exports": "error"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-ali",
      "stylelint-prettier/recommended"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.1",
    "commitlint-config-ali": "^1.1.0",
    "dumi": "^2.4.7",
    "eslint": "^8.57.0",
    "eslint-config-ali": "^15.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-config-ali": "^1.3.2",
    "stylelint": "^16.3.1",
    "stylelint-config-ali": "^2.1.1",
    "stylelint-prettier": "^5.0.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
