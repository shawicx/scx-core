{
  "private": true,
  "name": "scxfe",
  "type": "module",
  "homepage": "https://github.com/shawicx/scx-core#readme",
  "bugs": {
    "url": "https://github.com/shawicx/scx-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawicx/scx-core.git"
  },
  "funding": "https://github.com/sponsors/shawicx",
  "author": {
    "name": "cx shaw",
    "email": "shawicx"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev && dumi dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "oxlint . --config oxlint.json && stylelint \"**/*.{css,less,scss}\"",
    "lint:fix": "prettier --write . && oxlint --fix . --config oxlint.json && stylelint --fix \"**/*.{css,less,scss}\"",
    "prepare": "husky install",
    "prepublish": "turbo build",
    "publish": "changeset add && changeset version && changeset publish",
    "postaction": "git push origin main --tags",
    "release": "pnpm run prepublish && pnpm run publish && pnpm run postaction",
    "build:docs": "turbo build && dumi build"
  },
  "commitlint": {
    "extends": [
      "ali"
    ],
    "rules": {
      "type-case": [
        2,
        "always",
        [
          "lower-case",
          "upper-case"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "RELEASING",
          "feat",
          "fix",
          "docs",
          "style",
          "test",
          "refactor",
          "chore",
          "revert"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "oxlint --fix --config oxlint.json",
    "*.{css,less,scss}": "stylelint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "stylelint": {
    "extends": [
      "stylelint-config-ali",
      "stylelint-prettier/recommended"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.8.1",
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/minimatch": "^6.0.0",
    "@types/source-map": "^0.5.7",
    "@vitejs/plugin-vue": "^6.0.3",
    "commitlint-config-ali": "^1.3.0",
    "dumi": "^2.4.21",
    "fs-extra": "^11.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "mlly": "^1.8.0",
    "oxlint": "^1.32.0",
    "prettier": "^3.7.4",
    "prettier-config-ali": "^1.5.0",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-postcss": "^4.0.2",
    "source-map": "^0.7.6",
    "source-map-js": "^1.2.1",
    "stylelint": "^16.26.1",
    "stylelint-config-ali": "^2.3.0",
    "stylelint-prettier": "^5.0.3",
    "tsup": "^8.5.1",
    "turbo": "latest",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22"
  }
}
